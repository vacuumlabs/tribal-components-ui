{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components/*": ["src/components/*"],
      "@utils/*": ["src/utils/*"],
      "@storybook/*": ["storybook/*"],
      "@assets/*": ["assets/*"]
    },
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["dom", "esnext", "es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "target": "es2015",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
